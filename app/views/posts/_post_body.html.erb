
  <% if post.liked?(current_user)%>
    <%= form_with model: Like.destroy %>
    <%= form.hidden_field :user_id, value:current_user.id %>
    <%= form.hidden_field :post_id, value:post.id %>
    <%= form.submit "Like" %>
  <% else %>
    <%= form_with model: Like.new %>
    <%= form.hidden_field :user_id, value:current_user.id %>
    <%= form.hidden_field :post_id, value:post.id %>
    <%= form.submit "Like" %>
  <% end %>
  <%= post.likes.count %>
