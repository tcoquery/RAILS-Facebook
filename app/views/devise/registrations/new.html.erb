<div class="container is-max-desktop mt-6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, class: "label" %>
    <%= f.text_field :first_name, class: "input", autofocus: true, autocomplete: "first_name" %>
  </div>

    <div class="field">
    <%= f.label :last_name, class: "label" %>
    <%= f.text_field :last_name, class: "input", autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label" %>
    <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button is-responsive is-link" %>
    
  </div>
<% end %>

<%= render "devise/shared/registration" %>
</div>
